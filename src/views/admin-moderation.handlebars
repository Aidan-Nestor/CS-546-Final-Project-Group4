<h1>Comment Moderation</h1>

<form id="moderationFilters" class="moderation-filters-form">
  <label>
    Status: 
    <select name="status" id="filter-status">
      <option value="">All</option>
      <option value="pending">Pending</option>
      <option value="approved">Approved</option>
      <option value="rejected">Rejected</option>
    </select>
  </label>
  <label>
    Has Reports: 
    <select name="hasReports" id="filter-reports">
      <option value="">All</option>
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>
  </label>
  <button type="submit" class="btn">Filter</button>
</form>

<div id="moderationLoading" class="moderation-loading" style="display: none;">Loading...</div>
<div id="moderationError" class="moderation-error" style="display: none;" role="alert"></div>
<div id="moderationComments" class="moderation-comments-list"></div>

